<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.project.memoryhelper.LukkariActivity">

    <!--<TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="367dp"
            android:layout_height="116dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tips: 1. Go to https://login.oulu.fi/idp/Authn/RemoteUser 2. Click Additional Features on the bottom right corner; 3. Click Export calendar and copy the link; 4. Paste the link below and press SETUP LUKKARI button."
            android:id="@+id/textView3"
            android:linksClickable="true"
            android:autoLink="web"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/btn_lukkari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setup Lukkari"
            />

        <EditText
            android:id="@+id/text_lukkari"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#ffffffff"
            android:textColorHint="#ffffffff"
            android:gravity="top"
            android:hint="Paste the url here." />
    </LinearLayout>

</RelativeLayout>
